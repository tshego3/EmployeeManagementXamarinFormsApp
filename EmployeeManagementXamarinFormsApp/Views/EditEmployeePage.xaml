<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagementXamarinFormsApp.Views.EditEmployeePage"
             xmlns:viewModels="clr-namespace:EmployeeManagementXamarinFormsApp.ViewModels">

    <!--<ContentPage.BindingContext>
        <viewModels:EditEmployeeViewModel />
    </ContentPage.BindingContext>-->

    <StackLayout Orientation="Vertical">
        <Entry Text="{Binding Employee.TbFirstName}" />
        <Entry Text="{Binding Employee.TbSurname}" />
        <Entry Text="{Binding Employee.TbTellNo}" />
        <Entry Text="{Binding Employee.TbEmail}" />

        <Button Command="{Binding PutEmployeeCommand}" Text="Update" />
        <Button Command="{Binding DeleteEmployeeCommand}" Text="Delete" />
    </StackLayout>

</ContentPage>